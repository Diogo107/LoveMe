<h1>Meet {{animal.name}}</h1>

<div class="container">
  <div class="row">
    <div class="col-3">
      <figure>
          <img src="{{animal.photos}}" alt="{{animal.name}}'s Photo" class="img-fluid">
      </figure>
    </div>
    <div class="col-6">
      <span><strong>Name</strong>: {{animal.name}}</span>
      <br />
      <span><strong>Specie</strong>: {{animal.specie}}</span>
      <br />
      <span><strong>Breed</strong>: {{animal.breed}}</span>
      <br />
      <span><strong>Age</strong>: {{animal.animalAge}}</span>
      <br />
      <span><strong>Gender</strong>: {{animal.animalGender}}</span>
      <br />
      <span><strong>Size</strong>: {{animal.animalSize}}</span>
      <br />
      <span><strong>Vaccination</strong>: {{animal.animalVaccination}}</span>
      <br />
      <span><strong>Castration</strong>: {{animal.animalCastration}}</span>
      <br />
      <span><strong>Description</strong>: {{animal.animalDescription}}</span>
      <br />
    </div>
    <div class="col-3">
      <h3>Contact Form</h3>
      <form action="/animal/single-animal/{{animal._id}}" method="POST">
        <label for="email">Your Email</label>
        <input type="text" placeholder="Enter your email here...">
        
        <label for="message">Your Email</label>
        <textarea name="message" id="" cols="30" rows="5" placeholder="Enter your message here..."></textarea>
        <button type="submit">Send Message</button>
      </form>
    </div>
  </div>
</div>

