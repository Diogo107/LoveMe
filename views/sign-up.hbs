<form action="/authentication/sign-up" method="POST">
  <label for="input-name">Name / Association</label>
  <input type="text" id="input-name" required name="name" placeholder="Name / Association" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" required name="email" placeholder="Your Email" />

  <label for="address">Address</label>
  <input type="text" id="address" name="address" placeholder="Your Adress" />

  {{!-- <label for="picture">Upload Picture</label>
  <input type="file" accept="images/*" id="picture" alt="Photo"> --}}
  
  <label for="input-password">Password</label>
  <input type="password" name="password" required id="input-password" placeholder="A Strong Password" />

  <button>Sign Up</button>
</form>
<a href="/authentication/github">Sign Up with GitHub</a>
