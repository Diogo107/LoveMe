<section class="nav-padding">


<div class="row">
  <div class="col-4 align-profile">
    <div class="col-8  d-flex align-items-center max-width">
      <figure><img src="{{user.picture}}" alt="" class="img-thumbnail rounded"></figure>
    </div>
    <div class="col-6 background2">
      <span><strong>Name</strong>: {{user.name}}</span>
      <br />
      <span><strong>Email</strong>: {{user.email}}</span>
      <br />
      <span><strong>Address</strong>: {{user.address}}</span>
      <br />
     <a href="/authentication/edit"><strong>Edit Profile...</strong></a>
      <form action="/authentication/profile/delete" method="POST">
        <button>Delete Profile</button>
        </form>
    </div>
  </div>
  <div class="col-8">

    <div class="row">
     

  {{#each animal}} 
   
  <div class="cardcontainer col-2 ">

    <a href="/animal/single-animal/{{_id}}">

      <img class="cardimg" src="{{photos}}">
      <a href="/authentication/profile/delete/{{_id}}">
        <img src="/images/erase-button.png" alt="erase" class="erase-button">
      </a>
      <div class="cardcontent">
        <p><u>{{breed}}</u></p>
        <h3>{{name}}</h3>
      
      </div>
      
    </a>

  </div>
  {{/each}}



    </div>

    
</div>





</section>